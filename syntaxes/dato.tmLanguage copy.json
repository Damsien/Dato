{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Dato Programming Language Test",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.dato",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.dato",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dato",
					"match": "\\\\."
				}
			]
		}
	},
	"comments": {
		"patterns": [
			{
				"begin": "#\\!",
				"beginCaptures": {
					"0": {
						"name": "punctuation.definition.comment.dota"
					}
				},
				"end": "\\n",
				"name": "comment.line.number-sign.dota"
			},
			{
				"captures": {
					"0": {
						"name": "punctuation.definition.comment.dota"
					}
				},
				"match": "/--/",
				"name" : "comment.block.empty.dota"
			},
			{
				"include": "#comments-inline"
			}
		]
	},
	"scopeName": "source.dato"
}